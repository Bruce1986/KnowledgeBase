{
  "manifest_version": 3,
  "name": "Webpage Saver",
  "description": "Save the current page HTML to a folder.",
  "version": "1.0",
  "permissions": ["downloads", "activeTab"],
  "action": {
    "default_title": "Save page"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "save-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Save the current tab"
    }
  }
}
